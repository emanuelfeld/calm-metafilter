{
    "manifest_version": 2,
    "name": "Calm MetaFilter",
    "description": "Encourages you to stop for a breath before you comment.",
    "version": "0.0.1",
    "author": "Emanuel Feld",
    "background": {
        "scripts": []
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "web_accessible_resources": [
        "css/main.css",
        "js/main.js",
        "js/options.js",
        "options.html"
    ],
    "icons": {
        "16": "img/16.png",
        "48": "img/48.png",
        "128": "img/128.png"
    },
    "content_scripts": [
        {
            "css": [
                "css/main.css"
            ],
            "js": [
                "js/main.js"
            ],
            "matches": [
                "https://*.metafilter.com/*"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "https://*.metafilter.com/*",
        "storage"
    ]
}
